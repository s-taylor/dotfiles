#!/bin/bash

brew update

# update zsh
brew install zsh

# update git
brew install git

# update ruby
brew install ruby

# install Tmux
brew install tmux
brew install reattach-to-user-namespace

# install neovim
brew tap neovim/neovim
brew install neovim

# install yarn
brew install yarn

# install silver searcher (Ag)
brew install mercurial
brew install the_silver_searcher

# install fzf
brew install fzf

# install mas
brew install mas

# install cmake (used by YouCompleteMe)
brew install cmake

# install node version manager (nvm)
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.0/install.sh | bash

