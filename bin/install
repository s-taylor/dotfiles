#!/bin/bash

brew update

# update zsh
brew install zsh

# update git
brew install git

# update ruby
brew install ruby

# install Tmux
brew install tmux
brew install reattach-to-user-namespace

# install neovim
brew tap neovim/neovim
brew install neovim

# install yarn (don't install node, or nvm prefix issue)
brew install yarn --without-node

# install silver searcher (Ag)
brew install mercurial
brew install the_silver_searcher

# install fzf
brew install fzf

# install cmake (used by YouCompleteMe)
# brew install cmake

# install go
# brew install go --cross-compile-common

# install mercurial and bazaar (for Go)
brew install hg bzr

# install node version manager (nvm)
curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.0/install.sh | bash

# install fd
brew install fd

# install mas
brew install mas

# install youtube-dl
brew install youtube-dl
brew install ffmpeg
