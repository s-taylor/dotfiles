snippet setStateAsync "setStateAsync function"
setStateAsync(state) {
  const self = this;
  return new Promise((resolve, reject) =>
    self.setState(state, (err, res) => {
      if (err) return reject(err);
      return resolve(res);
    })
  );
},
endsnippet

