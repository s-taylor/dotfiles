snippet cl "console.log('var', var)" b
console.log('$1', $1);$0
endsnippet

snippet cy "console.log('<yank>', <yank>)" b
console.log('${1:`!v @"`}', $1);$0
endsnippet

snippet cm "console.log(message)" b
console.log('$1');$0
endsnippet

snippet ca "console.log(args)" b
console.log('$1 args', Array.prototype.slice.call(arguments));$0
endsnippet

snippet co "console.log(object)" b
console.log('$1', JSON.stringify($1, null, 2));$0
endsnippet

snippet re "require" b
const $2 = require('$1');$0
endsnippet

snippet im "import" b
